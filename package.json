{
  "name": "nof-smart-contracts",
  "description": "Smart Contracts for NoF App",
  "version": "1.0.0",
  "license": "MIT",
  "author": "P4 Games",
  "scripts": {
    "dev": "npm run dev",
    "test": "hardhat test",
    "compile": "hardhat compile",
    "deploy": "npx hardhat run scripts/deploy.ts --network localhost",
    "deploy-mock-data": "npx hardhat run scripts/deploy-mock-data.ts --network localhost",
    "deploy-mumbai": "npx hardhat run scripts/deploy.ts --network mumbai",
    "solhint": "npx solhint \"{contracts,test}/**/*.sol\"",
    "lint": "npx eslint --ignore-path .gitignore .",
    "lint:fix": "npx eslint --ignore-path .gitignore . --fix",
    "prettier": "npx prettier --log-level warn --ignore-path .gitignore \"{contracts,test}/**/*.{js,ts,.sol}\" --check",
    "prettier:fix": "npx prettier --log-level warn --ignore-path .gitignore \"{contracts,test}/**/*.{js,ts,.sol}\" --write",
    "slither": "slither . --filter-paths \" *v1.sol\"",
    "commitlint-check-comit-msg": "npx --no-install commitlint --edit \"$1\""
  },
  "devDependencies": {
    "@commitlint/cli": "^18.4.3",
    "@commitlint/config-conventional": "^18.4.3",
    "@ethersproject/abi": "^5.7.0",
    "@ethersproject/providers": "^5.7.2",
    "@nomicfoundation/hardhat-chai-matchers": "^1.0.0",
    "@nomicfoundation/hardhat-network-helpers": "^1.0.0",
    "@nomicfoundation/hardhat-toolbox": "^2.0.0",
    "@nomiclabs/hardhat-ethers": "^2.0.0",
    "@nomiclabs/hardhat-etherscan": "^3.0.0",
    "@openzeppelin/contracts": "^4.8.0",
    "@typechain/ethers-v5": "^10.1.0",
    "@typechain/hardhat": "^6.1.2",
    "@types/chai": "^4.3.11",
    "@types/mocha": "^10.0.6",
    "@types/node": "^20.10.3",
    "chai": "^4.3.10",
    "dotenv": "^16.3.1",
    "eslint": "^8.55.0",
    "eslint-config-prettier": "^9.1.0",
    "ethers": "^5.0.0",
    "hardhat": "^2.19.1",
    "hardhat-gas-reporter": "^1.0.9",
    "hardhat-ignore-warnings": "^0.2.9",
    "prettier": "^3.1.0",
    "prettier-plugin-solidity": "^1.2.0",
    "solhint": "^4.0.0",
    "solidity-coverage": "^0.8.5",
    "ts-node": "^10.9.1",
    "typechain": "^8.3.2",
    "typescript": "^5.3.2",
    "uuid": "^9.0.1",
    "web3": "^4.3.0"
  },
  "engines": {
    "node": "^16 || ^17 || ^18",
    "npm": "^8.1.0 || ^8.5.0 || ^9.8.1",
    "yarn": "^1.22.10 || ^1.22.19"
  },
  "pre-commit": {
    "precommit.silent": true,
    "run": [
      "prettier",
      "commitlint-check-comit-msg"
    ]
  }
}
